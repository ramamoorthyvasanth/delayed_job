<% (['development', 'production'] + [@environment]).uniq.each do |env| -%>
<%= env %>:
  adapter: mysql2
  database: <%= @database['DB_NAME'].to_s.inspect %>
  encoding: utf8
  host: <%= @database['DB_HOST'].to_s.inspect %>
  username: <%= @database['DB_USERNAME'].to_s.inspect %>
  password: <%= @database['DB_PASSWORD'].to_s.inspect %>
  pool: <%= @database['DB_POOL'] %>
  reconnect: true
<% end %>

