<% (['development', 'production'] + [@environment]).uniq.each do |env| -%>
<%= env %>:
  adapter: mysql2
  database: <%= ENV['DB_NAME'] %>
  encoding: utf8
  host: <%= ENV['DB_HOST'] %>
  username: <%= ENV['DB_USERNAME'] %>
  password: <%= ENV['DB_PASSWORD'] %>
  pool: <%= ENV['POOL'] %>
  reconnect: true %>
<% end %>

